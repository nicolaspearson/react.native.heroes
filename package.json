{
	"name": "react.native.heroes",
	"description": "A React Native app that displays hero information.",
	"main": "node_modules/expo/AppEntry.js",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nicolaspearson/react.native.heroes.git"
	},
	"scripts": {
		"start": "expo start",
		"android": "expo start --android",
		"ios": "expo start --ios",
		"eject": "expo eject",
		"test": "npm run tslint && npm run tsc-test && npm run jest",
		"tslint": "tslint -p tsconfig.json src/**/*.{ts,tsx}",
		"tsc-test": "tsc --project . --noEmit",
		"jest": "jest"
	},
	"dependencies": {
		"expo": "~32.0.6",
		"react": "16.5.0",
		"react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz"
	},
	"devDependencies": {
		"@types/expo": "~32.0.8",
		"@types/jest": "~24.0.11",
		"@types/react": "~16.8.8",
		"@types/react-native": "~0.57.40",
		"@types/react-test-renderer": "~16.8.1",
		"jest": "~24.5.0",
		"jest-expo": "~32.0.0",
		"react-native-dotenv": "~0.2.0",
		"react-test-renderer": "~16.8.4",
		"ts-jest": "~24.0.0",
		"tslint": "~5.14.0",
		"tslint-config-airbnb": "~5.11.1",
		"tslint-react": "~3.6.0",
		"typescript": "~3.3.3333"
	},
	"jest": {
		"preset": "jest-expo",
		"transform": {
			"^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
			"^.+\\.tsx?$": "ts-jest"
		},
		"testMatch": [
			"**/__tests__/**/*.ts?(x)",
			"**/?(*.)+(spec|test).ts?(x)"
		],
		"moduleFileExtensions": [
			"js",
			"ts",
			"tsx"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": {
					"jsx": "react"
				}
			}
		}
	}
}
